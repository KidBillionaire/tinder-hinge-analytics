NODE_ENV=production
PORT=80
HTTPS_PORT=443

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Domain Configuration
DOMAIN=api.yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# SSL Configuration (managed by AWS Certificate Manager)
USE_AWS_CERTIFICATE=true

# Monitoring
ENABLE_CLOUDWATCH=true
CLOUDWATCH_LOG_GROUP=dating-assistant-prod 

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_MONITORING=true
SNS_TOPIC_CRITICAL=arn:aws:sns:region:account:dating-assistant-production-critical
SNS_TOPIC_WARNING=arn:aws:sns:region:account:dating-assistant-production-warning

# CloudWatch Configuration
CLOUDWATCH_NAMESPACE=DatingAssistant-production
METRIC_INTERVAL=60000